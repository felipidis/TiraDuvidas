<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1 style="color: #fff;">Perguntas</h1>
        <hr>

        <% perguntas.forEach(pergunta =>{ %>
            <div class="card" id="lista-perguntas">
                <div class="card-header">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-body">
                    <p><%= pergunta.descricao %></p>
                </div>
                <div class="card-footer">
                    <a href="/perguntar/<%= pergunta.id%>"> <button class="btn btn-primary" > Responder </button> </a>
                </div>
            </div>     
        <% }) %>

    </div>

</body>
<%-include('partials/footer.ejs') %>